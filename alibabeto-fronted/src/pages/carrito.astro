---
import ProductosCarrito from '../components/react/carrito/ProductosCarrito'
import Layout from '../layouts/Layout.astro'

---

<Layout title='' footer={false}>
    
    <div class="px-6 md:px-0">
        <div class="my-8">
            <h2 class="text-2xl font-bold">
                Carrito de compras
            </h2>
        
            <section class="custom-grid rounded-lg mt-5 gap-4">
        
                <ProductosCarrito
                    client:only
                />
              
            </section>
        </div>
    </div>

</Layout>

<style is:global>
    .grid-contenedor-productos
    {
        align-items: start; /* o flex-start */
        align-content: start; /* o flex-start */
    }
    .custom-grid
    {
        display: flex;
        /* grid-template-columns: 68% 1fr; */
    }
    .grid-columna
    {
        grid-template-columns: 40% 1fr 1fr 1fr;
        /* grid-auto-rows: 40px; */
       
        height: 100%;
    }

    @media (width < 480px)
    {
        .custom-grid
        {
            flex-direction: column;
        }
        .grid-columna
        {
            grid-template-columns: 100%;
        }
    }
</style>